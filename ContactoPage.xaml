<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppContactos.ContactoPage"
             Title="Ingreso de Contacto">

    <ContentPage.Resources>
        <!-- Estilo implícito para Entry -->
        <Style TargetType="Entry">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextColor" Value="DarkBlue"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Título + Imagen alineada a la derecha -->
            <Grid ColumnDefinitions="*,Auto" Padding="0,0,0,10">
                <Label Text="Ingreso de Contacto"
                       FontSize="20"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"/>

                <Image Source="iconos_contacto_3d_1053_a.jpg"
                       HeightRequest="120"
                       WidthRequest="120"
                       HorizontalOptions="End"
                       Aspect="AspectFit"/>
            </Grid>

            <!-- Picker de tipo de identificación -->
            <Picker x:Name="identificacionPicker" Title="Tipo de Identificación">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>CI</x:String>
                        <x:String>RUC</x:String>
                        <x:String>Pasaporte</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- Campo de identificación -->
            <Entry x:Name="identificacionEntry" Placeholder="Número de Identificación"/>
            <Entry x:Name="nombresEntry" Placeholder="Nombres"/>
            <Entry x:Name="apellidosEntry" Placeholder="Apellidos"/>
            <DatePicker x:Name="fechaPicker"/>
            <Entry x:Name="correoEntry" Placeholder="Correo Electrónico"/>
            <Entry x:Name="salarioEntry" Placeholder="Salario" Keyboard="Numeric"/>

            <!-- Botón para guardar -->
            <Button Text="Guardar y Ver Resumen"
                    Clicked="OnGuardarClicked"
                    BackgroundColor="#6A1B9A"
                    TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
